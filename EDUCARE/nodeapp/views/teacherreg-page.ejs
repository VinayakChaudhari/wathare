<div class="container " style="border-top-left-radius: .8rem; border-top-right-radius: .8rem;">
   <div class=" col-md-7 col-md-offset-3">
       <div>
        <br><br><br><br>
       </div>
       <div class="panel panel-primary">
     
           <div class="panel-heading " style="font-size: 35px; color: rgb(250, 250, 252) ;text-align: center; align-items: center;">
            <img class=""  src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTK0_nXT268pjN2KK61kG6KYtlA5fIq8PXADQ&usqp=CAU" /> &nbsp;
             <label >Teacher Registration Form</label> 
           </div>
           
           <div class="panel-body needs-validation">
               <form method="post"  action="teacherreg" onsubmit="message() ">
                <div class="form-group ">
                    <label for="name">Teacher Name :</label>
                    <input type="text" class="form-control" name="name" id="name" placeholder="Enter Student Name" required>
                </div>
                    <div class="form-group">
                    <label for="Address">Teacher Address :</label>
                    <input type="text" class="form-control" name="address" id="Address" placeholder="Enter Address" required>
                </div>
                  <div class="form-group">
                    <label for="branch">Branch :</label>
                    <input type="text" class="form-control" name="branch"  id="branch"  placeholder="Enter Branch Name" required>
                </div>
                  <div class="form-group">
                      <label for="PhoneNo">Phone No :</label>
                      <input type="number" class="form-control" name="PhoneNo" id="PhoneNo" placeholder="Enter phone Number" required>
                  </div>
                  <div  class="form-group">
                    <label for="email">Email :</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" required>
                  </div>
                  <div class="form-group">
                    <label for="password">Password :</label>
                    <input type="password" class="form-control" id="password" placeholder="Enter Password" name="password" required>
                </div>
               
                  <div class="form-group">
                    <label for=""> Gender :</label>&nbsp;&nbsp;
                        <input type="radio" id="male" name="gender" value="Male" ><label for="male" class="radio-inline" >Male </label> &nbsp;&nbsp;
                        <input type="radio" id="Female" name="gender" value="Female"><label for="Female" class="radio-inline" > Female</label>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <label for="DateOfBirth"> &nbsp;&nbsp;Date of Birth :</label>
                        <input type="date" class="form-control-inline" name="DateOfBirth" id="DateOfBirth" placeholder="yyyy-mm-dd" required>

                    </div>
                    
                        <div class="form-group">
                   
                </div>
                <div class="form-group">
                    <input type="checkbox" class="form-control-inline" id="check" required>
                    <label for="check" >I hereby declare that the information Provided is true & correct, As per my best.</label>
                </div>
               
                
                <div class="form-group text-center" >
                    <input type="submit" class="btn btn-primary">
                </div>
               </form>
           </div>
           <div class="panel-footer text-center ">
               <p class="text-primary">&copy; Educare</p>
           </div>
       </div>
   </div>
  </div>
  
</body>
<script>
    function message()
    { 
        var name=document.getElementById("name");
        alert( name.value+" You Have Registerd Successfull." )
        
    }
    function getbutton()
  {
    var list=document.getElementById("list");
    list.style.display="list-item";
    setInterval((close) =>
   {
    list.style.display="none";
  }, 4000);

  }
   
   
</script>
</html>
