<body style="background-image: url(https://img.freepik.com/free-photo/abstract-blur-defocused-bookshelf-library_1203-9640.jpg?t=st=1649254236~exp=1649254836~hmac=abd864aef5ec6db37ac10059113b0619e0bf9f09416c18bec4d3cd9696547cbb&w=996); background-repeat:no-repeat; background-position:top; background-size:cover;" class="body">
  <nav>
    <div class="menu">
      <div class="logo">
        <a href="#" style="font-size: 55px;">Educare</a>
      </div>
      <ul>
        <li><a href="#" >Home</a></li>
        <li><a href="/aboutus">About</a></li>
        <li><a href="/contactus">Contact</a></li>
        <li >
          <div class="dropdown show" >
            <a class="active" class="btn btn-secondary dropdown-toggle"  href="/" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" onclick="getbutton()" >
               Registration
            </a> 
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" id="list" style="display:none;">
              <a class="dropdown-item" href="/register">Student</a><br>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/teacherreg">Teacher </a>
            </div>
          </div>
        </li>
        <li><a href="/login">Login</a></li>
      </ul>
    </div>
